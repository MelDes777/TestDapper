@model TestDapper.Models.Driver

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4 class="alert alert-secondary">Create a driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success btn-sm" /> &emsp;
                <a asp-action="index" class="btn btn-link btn-sm">Back</a>
            </div>
        </form>
    </div>
</div>
